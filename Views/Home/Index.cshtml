@model IEnumerable<realEstate1.Models.Property>

<div class="container-fluid p-0">
    <!-- Hero Section (Jumbotron) -->
    <div class="jumbotron bg-light text-dark"
         style="position: relative; left: -120px; top: -20px; width: 1530px; height: 400px; margin: 0; padding: 0; display: flex; justify-content: center; align-items: center; text-align: center;">
        <div style="padding: 50px;">
            <h1 class="display-4">Welcome to RentEase</h1>
            <p class="lead">At RentEase, we specialize in connecting property owners with renters. Whether you're looking for a new place to call home or have a property to rent out, we've got you covered. Discover the perfect rental properties or list your own with ease today!</p>
            <hr class="my-4">
            <p>Are you a property owner? Click the button below to list your property and start reaching potential tenants right away.</p>
            <p class="lead">
                <a class="btn btn-lg btn-success text-white px-5 py-3 shadow-lg" href="@Url.Action("Create", "Properties")" role="button">
                    <i class="fas fa-home"></i> Add Your Property Now
                </a>
            </p>
        </div>
    </div>

    <!-- Available Properties Section -->
    <div class="container mt-4">
        <h2 class="text-center mb-4">Available Properties</h2>
        <div class="row">
            @foreach (var property in Model)
            {
                <div class="col-sm-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <!-- Property Image Centered -->
                        <div class="d-flex justify-content-center align-items-center" style="height: 200px;">
                            <img style="width: 100%; height: 100%; max-width: 250px; object-fit: cover;"
                                 src="@Url.Content("~/images/" +
                                 (property.PropertiesImages != null && property.PropertiesImages.Any() ?
                                 property.PropertiesImages.FirstOrDefault().ImagePath : "default-image.jpg"))"
                                 alt="Property Image" class="img-fluid rounded" />
                        </div>
                        <div class="card-body">
                            <!-- Property Info -->
                            <h4 class="card-text text-center text-muted">Price: @property.PricePerDay.ToString("C") per day</h4>
                            <h5 class="card-title text-center">@property.Address</h5>


                            <!-- Buttons -->
                            <div class="d-flex justify-content-center">
                                <a href="@Url.Action("Details", "Properties", new { id = property.PropertyID })" class="btn btn-success mx-2 px-4 py-1">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a href="@Url.Action("Rent", "Properties", new { id = property.PropertyID })" class="btn btn-outline-dark mx-2 px-4 py-1">
                                    <i class="fas fa-handshake"></i> Rent
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
