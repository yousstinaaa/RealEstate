<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<div class="container mt-3">

    <h2 class="text-center mb-4">@Model.Address</h2>

    <div class="row justify-content-center">
        <div class="col-md-5 d-flex flex-column align-items-center">
            <div id="propertyCarousel" class="carousel slide mb-4" data-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var image in Model.PropertiesImages.Select((img, index) => new { img, index }))
                    {
                        <div class="carousel-item @(image.index == 0 ? "active" : "")">
                            <img style="width: 100%; height: 350px; object-fit: cover;" src="@Url.Content("~/images/" + image.img.ImagePath)" class="d-block" alt="Property Image">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#propertyCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#propertyCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <!-- Buttons placed below the image -->
            <div class="d-flex justify-content-between w-100">
                <a href="@Url.Action("Rent", "Properties", new { id = Model.PropertyID })" class="btn btn-success w-100 mr-2">
                    Rent
                </a>

                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-dark w-100">
                    <i class="fas fa-handshake"></i> Back to List
                </a>
            </div>
        </div>

        <div class="col-md-5">
            <h4>Property Details</h4>
            <ul class="list-group mb-2">
                <li class="list-group-item"><strong>Owner:</strong> @Model.Owner</li>
                <li class="list-group-item"><strong>Price per Day:</strong> @Model.PricePerDay.ToString("C")</li>
                <li class="list-group-item"><strong>Type:</strong> @Model.Type</li>
                <li class="list-group-item"><strong>Description:</strong> @Model.Description</li>
            </ul>

            <h4>Quick Info</h4>
            <ul class="list-group mb-2">
                <li class="list-group-item"><strong>Status:</strong> Available</li>
                <li class="list-group-item"><strong>Location:</strong> 123 Main St, Cityville</li>
                <li class="list-group-item"><strong>Bedrooms:</strong> 2</li>
                <li class="list-group-item"><strong>Bathrooms:</strong> 1</li>
            </ul>
        </div>
    </div>
</div>




